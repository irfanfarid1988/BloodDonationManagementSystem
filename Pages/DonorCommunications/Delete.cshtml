@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete Communication";
}

<h2>Delete Communication</h2>

<h3>Are you sure you want to delete this communication?</h3>
<div>
    <h4>@Model.DonorCommunication.Donor.FirstName @Model.DonorCommunication.Donor.LastName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.DonorCommunication.CommunicationDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.DonorCommunication.MessageType</dd>
        <dt class="col-sm-2">Message</dt>
        <dd class="col-sm-10">@Model.DonorCommunication.Message</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.DonorCommunication.Status</dd>
    </dl>

    <form method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="DonorCommunication.CommunicationID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>