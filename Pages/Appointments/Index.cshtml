@page
@model IndexModel
@{
    ViewData["Title"] = "Appointments";
}

<h2>Appointments</h2>
@Html.AntiForgeryToken()
<table class="table">
    <thead>
        <tr>
            <th>Donor</th>
            <th>Date</th>
            <th>Time</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model.Appointments)
        {
            <tr>
                <td>@appointment.Donor.FirstName @appointment.Donor.LastName</td>
                <td>@appointment.AppointmentDate.ToShortDateString()</td>
                <td>@appointment.AppointmentTime.ToString(@"hh\:mm")</td>
                <td>@appointment.Status</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@appointment.AppointmentID">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@appointment.AppointmentID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="./Create" class="btn btn-primary">Schedule New Appointment</a>