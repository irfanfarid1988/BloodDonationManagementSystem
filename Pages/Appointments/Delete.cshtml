@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete Appointment";
}

<h2>Delete Appointment</h2>

<h3>Are you sure you want to delete this appointment?</h3>
<div>
    <h4>@Model.Appointment.Donor.FirstName @Model.Appointment.Donor.LastName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Appointment.AppointmentDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Time</dt>
        <dd class="col-sm-10">@Model.Appointment.AppointmentTime.ToString(@"hh\:mm")</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Appointment.Status</dd>
    </dl>

    <form method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Appointment.AppointmentID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>