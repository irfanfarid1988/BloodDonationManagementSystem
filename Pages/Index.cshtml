@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<section class="hero-section text-center py-5 bg-light">
    <div class="container">
        <h1 class="text-white">Blood Donation Management System</h1>
        <p class="text-white">Manage blood donation efficiently with our system</p>
        <p class="text-white">Our system helps in tracking donations, managing donor profiles, and ensuring smooth operations in medical facilities.</p>
        <a href="#" class="btn btn-primary">Call to Donate</a>
        <a href="#" class="btn btn-warning">Learn More</a>
    </div>
</section>

