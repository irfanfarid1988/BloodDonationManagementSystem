@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete Blood Inventory";
}

<h2>Delete Blood Inventory</h2>

<h3>Are you sure you want to delete this inventory?</h3>
<div>
    <h4>@Model.BloodInventory.BloodGroup</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.BloodInventory.Quantity</dd>
        <dt class="col-sm-2">Expiration Date</dt>
        <dd class="col-sm-10">@Model.BloodInventory.ExpirationDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Donor</dt>
        <dd class="col-sm-10">@(Model.BloodInventory.Donor?.FullName ?? "N/A")</dd>
    </dl>

    <form method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="BloodInventory.InventoryID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>