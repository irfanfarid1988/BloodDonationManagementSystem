@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete Donor";
}

<h2>Delete Donor</h2>

<h3>Are you sure you want to delete this donor?</h3>
<div>
    <h4>@Model.Donor.FirstName @Model.Donor.LastName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Blood Type</dt>
        <dd class="col-sm-10">@Model.Donor.BloodGroup</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Donor.Email</dd>
        <dt class="col-sm-2">Contact</dt>
        <dd class="col-sm-10">@Model.Donor.ContactNumber</dd>
    </dl>

    <form method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Donor.DonorID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>