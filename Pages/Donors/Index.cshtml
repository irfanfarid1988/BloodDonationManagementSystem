@page
@model IndexModel
@{
    ViewData["Title"] = "Donors";
}

<h2>Donors</h2>
@Html.AntiForgeryToken()
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Blood Group</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donor in Model.Donors)
        {
            <tr>
                <td>@donor.FirstName @donor.LastName</td>
                <td>@donor.BloodGroup</td>
                <td>@donor.Email</td>
                <td>@donor.ContactNumber</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@donor.DonorID">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@donor.DonorID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="./Create" class="btn btn-primary">Register New Donor</a>